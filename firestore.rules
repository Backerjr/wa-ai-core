rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Multi-tenant security rules for artifacts/rozmowa-ai-core/users/{userId}
    // Each user can only access their own data
    
    match /artifacts/rozmowa-ai-core/users/{userId}/{document=**} {
      // Allow read and write only if the authenticated user's ID matches the userId in the path
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
