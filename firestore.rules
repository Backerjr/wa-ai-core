rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Multi-tenant architecture with user-isolated data paths
    // Path: artifacts/rozmowa-ai-core/users/{userId}/{collectionName}
    match /artifacts/rozmowa-ai-core/users/{userId}/{document=**} {
      // Users can only read and write their own data
      // Must be authenticated and the userId must match their auth UID
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

